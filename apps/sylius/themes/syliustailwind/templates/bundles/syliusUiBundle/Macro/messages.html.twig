{% macro default(message, icon, type, header) %}
    <div class="alert {{ type|default('') }}" {{ sylius_test_html_attribute('flash-message', type) }}>
        <svg class="alert__icon" fill="currentcolor" viewBox="0 0 24 24" width="36" height="36" aria-hidden="true">
            {{ icon|raw }}
        </svg>        
        <div class="content">
            {% if type is not empty %}
            <div class="header">
                {{ header|default(type)|trans }}
            </div>
            {% endif %}
            <p>{{ message|trans }}</p>
        </div>
    </div>
{% endmacro %}

