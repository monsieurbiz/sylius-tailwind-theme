<div class="w-full">
    <form method="get" action="{{ path('sylius_shop_product_index', {'slug': app.request.attributes.get('slug')}) }}" class="ui loadable form form-contro">
        <div class="input-group items-end" id="searchbar">
            <div class="input input-xs lg:input-sm input-bordered w-1/2" id="searchbarTextField">
                {% for filter in products.definition.enabledFilters %}
                    {{ sylius_grid_render_filter(products, filter) }}
                {% endfor %}
            </div>
            <div class="right aligned column" id="searchbarButtons">
                <div class="btn-group">
                    <button type="submit" class="btn btn-xs lg:btn-sm btn-primary !rounded-l-none" {{ sylius_test_html_attribute('search') }}><i class="search icon"></i> {{ 'sylius.ui.search'|trans }}</button>
                    <a href="{{ path('sylius_shop_product_index', {'slug': app.request.attributes.get('slug')}) }}" class="btn btn-xs lg:btn-sm btn-primary" {{ sylius_test_html_attribute('clear') }}>
                        <i class="cancel icon"></i> {{ 'sylius.ui.clear'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>
