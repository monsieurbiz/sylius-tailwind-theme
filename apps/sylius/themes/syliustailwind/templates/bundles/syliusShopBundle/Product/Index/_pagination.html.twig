{% set paginationLimits = (resources.definition.limits) %}

<div class="float-right small bold dropdown">
    <div class="content">
            {{ 'sylius.ui.show'|trans }}
        <div class="ui inline "> 
            <div tabindex="0" class="btn btn-outline btn-secondary btn-xs m-1 sylius-paginate">
            {{ resources.data.maxPerPage }}
            </div>
            <div tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-52">
            {% for limit in paginationLimits|filter(limit => limit != resources.data.maxPerPage) %}
                {% set path = path(app.request.attributes.get('_route'), app.request.attributes.all('_route_params')|merge(app.request.query.all)|merge({'limit': limit})) %}
                <a class="item" href="{{ path }}">{{ limit }}</a>
            {% endfor %}
            </div>
        </div>
    </div>
</div>
