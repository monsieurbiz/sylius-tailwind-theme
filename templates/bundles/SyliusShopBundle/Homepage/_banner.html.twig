<div class="hero">
    {% if use_webpack %}
        <img src="{{ asset('build/shop/images/homepage-banner.jpg', 'shop') }}" alt="{{ 'sylius.homepage.banner_content'|trans }}">
    {% else %}
        <img src="{{ asset('assets/shop/img/homepage-banner.jpg') }}" alt="{{ 'sylius.homepage.banner_content'|trans }}">
    {% endif %}
    <div class="hero-content lg:ml-12">
        <div class="mb-2 lg:mb-5 text-xl lg:text-5xl font-bold text-white max-w-md">{{ 'sylius.homepage.banner_content'|trans }}</div>
        <a href="#" class="link link-accent uppercase">{{ 'sylius.homepage.banner_button'|trans }}</a>
    </div>
</div>
