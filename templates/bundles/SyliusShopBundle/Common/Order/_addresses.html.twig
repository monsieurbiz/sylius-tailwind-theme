<div class="content-highlighted">
    <div class="flex">
        <div class="w-1/2 p-2" id="sylius-billing-address" {{ sylius_test_html_attribute('billing-address') }}>
            <div class="text-lg font-bold mb-2">{{ 'sylius.ui.billing_address'|trans }}</div>
            {% include '@SyliusShop/Common/_address.html.twig' with {'address': order.billingAddress} %}
        </div>
        <div class="divider lg:divider-horizontal"></div> 
        <div class="w-1/2 p-2" id="sylius-shipping-address" {{ sylius_test_html_attribute('shipping-address') }}>
            <div class="text-lg font-bold mb-2">{{ 'sylius.ui.shipping_address'|trans }}</div>
            {% include '@SyliusShop/Common/_address.html.twig' with {'address': order.shippingAddress} %}
        </div>
    </div>
</div>
